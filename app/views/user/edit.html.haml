- content_for :head do
  = stylesheet_link_tag 'Devise/sign_up'

%h2= t('.title', :resource => :user , :default => "Edit #{(:user).to_s.humanize}")
= form_for(@user, :url => user_path(id: @user.id), html: {class: "form-horizontal"}) do |f|
  .form-inputs
    .row.tabs
      %ul.nav.nav-tabs.col-md-8.col-md-offset-2
        %li.active
          %a{"data-toggle" => "tab", :href => "#details"} Details
        %li
          %a{"data-toggle" => "tab", :href => "#password"} Mot de passe
    .tab-content
      #details.tab-pane.active
        .form-group
          = f.label :login, class: "col-sm-3 col-md-4 control-label #{field_class(@user, :login)}"
          .col-sm-6.col-md-4
            = f.text_field :login, autofocus: true, required: true, class: "form-control"
        .form-group
          = f.label :email, class: "col-sm-3 col-md-4 control-label #{field_class(@user, :email)}"
          .col-sm-6.col-md-4
            = f.email_field :email, required: true, class: "form-control"
      #password.tab-pane
        .form-group
          = f.label :password, class: "col-sm-3 col-md-4 control-label #{field_class(@user, :password)}"
          .col-sm-6.col-md-4
            = f.password_field :password, :hint => "laisser vide pour ne pas changer le mot de passe", :required => false, autocomplete: "off", class: "form-control"
        .form-group
          = f.label :password_confirmation, class: "col-sm-3 col-md-4 control-label #{field_class(@user, :password)}"
          .col-sm-6.col-md-4
            = f.password_field :password_confirmation, :required => false, class: "form-control"
    .form-group
      .col-xs-6.col-xs-offset-3.col-sm-4.col-sm-offset-4.col-md-2.col-md-offset-5.submit
        = f.submit I18n.t('update'), class: "btn btn-block btn-success"
    .form-group
      .col-xs-6.col-xs-offset-3.col-sm-4.col-sm-offset-4.col-md-2.col-md-offset-5.submit
        = link_to t('devise.shared.links.back', :default => "Back"), :back
        %p
          = t('.unhappy', :default => 'Unhappy')
          ? #{link_to t('.cancel_my_account', :default => "Cancel my account"), registration_path(:user), :data => { :confirm => t('.are_you_sure', :default => "Are you sure?") }, :method => :delete}.


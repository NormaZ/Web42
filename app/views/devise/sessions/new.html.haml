- content_for :head do
  = stylesheet_link_tag 'Devise/sign_in'

%h2= t('.sign_in', :default => "Sign in")
= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f|
  .form-group
    = f.label :login, class: "col-sm-3 col-md-4 control-label"
    .col-sm-6.col-md-4
      = f.text_field :login, autofocus: true , class: "form-control", required: true
  .form-group
    = f.label :password, class: "col-sm-3 col-md-4 control-label"
    .col-sm-6.col-md-4
      = f.password_field :password, autocomplete: "off", class: "form-control", required: true
  .form-group.cta
    - if devise_mapping.rememberable?
      .col-xs-6.col-sm-3.col-sm-offset-3.col-md-2.col-md-offset-4
        %label.checkbox
          = f.check_box :remember_me
          = t("remember_me")
    .col-xs-6.col-sm-3.col-md-2
      = f.submit t('.sign_in', :default => "Sign in"), class: ['btn-block', 'btn', 'btn-success']
  .form-group
    .col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
      = render "devise/shared/links"